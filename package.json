{
  "name": "carbonui",
  "version": "1.0.0",
  "description": "A mobile UI library base on Vue.js.",
  "main": "dist/carbonui.js",
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "scripts": {
    "clean": "rimraf dist",
    "start": "node examples/server.js",
    "build": "npm run clean && webpack --progress --hide-modules --config webpack.build.min.js && webpack --progress --hide-modules --config  webpack.build.js",
    "build:examples": "rimraf examples/dist && webpack --config examples/webpack.build.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tofuxb/carbonui.git"
  },
  "keywords": [
    "vue",
    "vue components",
    "mobile ui",
    "carbon"
  ],
  "author": {
    "name": "Tofuxb",
    "email": "tofuxb@gmail.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tofuxb/carbonui/issues"
  },
  "homepage": "https://github.com/tofuxb/carbonui#readme",
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.11.6",
    "css-loader": "^0.21.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "fastclick": "^1.0.6",
    "file-loader": "^0.8.5",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "postcss-loader": "^0.13.0",
    "precss": "^1.4.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "vue": "^1.0.27",
    "vue-hot-reload-api": "^1.3.3",
    "vue-html-loader": "^1.2.3",
    "vue-loader": "^7.1.7",
    "vue-router": "^0.7.13",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.8.2",
    "webpack-hot-middleware": "^2.12.2"
  }
}
